{
	"manifest_version": 3,
	"name": "PhishGuard",
	"version": "1.0.0",
	"description": "Delegates URL risk analysis to a local Python API.",
	"permissions": [
		"activeTab",
		"storage",
		"tabs",
		"notifications",
		"scripting"
	],
	"host_permissions": [
		"http://127.0.0.1:8000/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"css": ["styles.css"],
			"run_at": "document_start"
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "PhishGuard"
	}
}